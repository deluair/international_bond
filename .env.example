# International Bond System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=International Bond System
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/international_bond
DB_HOST=localhost
DB_PORT=5432
DB_NAME=international_bond
DB_USER=bond_user
DB_PASSWORD=your_secure_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Cache Database (Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# DATA PROVIDER API KEYS
# =============================================================================
# Bloomberg API
BLOOMBERG_API_KEY=your_bloomberg_api_key
BLOOMBERG_SECRET=your_bloomberg_secret
BLOOMBERG_HOST=api.bloomberg.com

# Refinitiv (formerly Thomson Reuters)
REFINITIV_API_KEY=your_refinitiv_api_key
REFINITIV_SECRET=your_refinitiv_secret
REFINITIV_HOST=api.refinitiv.com

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key

# Quandl
QUANDL_API_KEY=your_quandl_api_key

# Yahoo Finance (usually free, but may have rate limits)
YAHOO_FINANCE_ENABLED=true

# IEX Cloud
IEX_CLOUD_API_KEY=your_iex_cloud_key
IEX_CLOUD_SECRET=your_iex_cloud_secret

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Slack Integration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#bond-alerts

# AWS Configuration (for cloud deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=international-bond-data

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for session management and encryption
SECRET_KEY=your_very_long_and_secure_secret_key_here_change_this_in_production

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# WEB APPLICATION SETTINGS
# =============================================================================
# Flask/Web Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Dash Configuration
DASH_HOST=0.0.0.0
DASH_PORT=8050

# =============================================================================
# TRADING SETTINGS
# =============================================================================
# Risk Management
MAX_POSITION_SIZE=10000000  # Maximum position size in base currency
MAX_PORTFOLIO_VAR=0.02      # Maximum portfolio VaR (2%)
MAX_SECTOR_CONCENTRATION=0.3 # Maximum sector concentration (30%)
MAX_COUNTRY_CONCENTRATION=0.4 # Maximum country concentration (40%)

# Trading Parameters
DEFAULT_CURRENCY=USD
BASE_CURRENCY=USD
TRADING_ENABLED=false       # Set to true to enable live trading
PAPER_TRADING=true         # Set to false for live trading

# Rebalancing
REBALANCE_FREQUENCY=daily   # daily, weekly, monthly
REBALANCE_THRESHOLD=0.05    # 5% deviation threshold

# =============================================================================
# DATA SETTINGS
# =============================================================================
# Data Update Frequency
DATA_UPDATE_INTERVAL=300    # seconds (5 minutes)
PRICE_UPDATE_INTERVAL=60    # seconds (1 minute)
NEWS_UPDATE_INTERVAL=900    # seconds (15 minutes)

# Data Storage
DATA_RETENTION_DAYS=365     # Keep data for 1 year
CACHE_EXPIRY_SECONDS=3600   # Cache expiry (1 hour)

# Data Quality
MIN_DATA_QUALITY_SCORE=0.8  # Minimum data quality threshold
MAX_MISSING_DATA_RATIO=0.1  # Maximum 10% missing data allowed

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging Configuration
LOG_FILE=logs/application.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60    # seconds

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1.0    # seconds
MEMORY_THRESHOLD=80         # percentage

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_international_bond
PYTEST_TIMEOUT=300          # seconds

# Development Tools
PROFILING_ENABLED=false
DEBUG_TOOLBAR=false
AUTO_RELOAD=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancing
WORKERS=4                   # Number of worker processes
WORKER_CONNECTIONS=1000     # Connections per worker

# Caching
CACHE_TYPE=redis           # redis, memcached, simple
CACHE_DEFAULT_TIMEOUT=300  # seconds

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
ENABLE_MACHINE_LEARNING=true
ENABLE_REAL_TIME_DATA=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PORTFOLIO_OPTIMIZATION=true
ENABLE_RISK_ATTRIBUTION=true
ENABLE_STRESS_TESTING=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_NOTIFICATIONS=true
ENABLE_API_ACCESS=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false